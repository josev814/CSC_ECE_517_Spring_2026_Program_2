<h3>Volunteer Assignment</h3>

<%= render @volunteer_assignment %>

<div class="mt-3">
  <%= link_to "Edit", edit_volunteer_assignment_path(@volunteer_assignment), class: "btn btn-primary" %>
  <%= link_to "Back", volunteer_assignments_path, class: 'btn btn-warning' %>

  <%=
      button_to "Delete",
        @volunteer_assignment,
        method: :delete,
        class: 'btn btn-danger d-inline',
        form: {
          data: {
            turbo_confirm: 'Are you sure?'
          },
          class: 'd-inline'
        }
  %>
</div>
