<div id="<%= dom_id volunteer_assignment %>" class="col-md-6 col-12">
  <div>
    <strong>Volunteer:</strong>
    <%= volunteer_assignment.volunteer.full_name %>  
  </div>

  <div class="mt-3">
    <strong>Event:</strong>
    <%= volunteer_assignment.event.title %>
  </div>

  <div class="mt-3">
    <strong>Status:</strong>
    <%= volunteer_assignment.status %>
  </div>

  <div class="mt-3">
    <strong>Hours worked:</strong>
    <%= volunteer_assignment.hours_worked %>
  </div>

  <div class="mt-3">
    <strong>Date logged:</strong>
    <%= volunteer_assignment.date_logged %>
  </div>

</div>
