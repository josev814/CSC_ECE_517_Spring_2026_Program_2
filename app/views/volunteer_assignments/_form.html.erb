<%= form_with(model: volunteer_assignment) do |form| %>
  <% if volunteer_assignment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(volunteer_assignment.errors.count, "error") %> prohibited this volunteer_assignment from being saved:</h2>

      <ul>
        <% volunteer_assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :volunteer_id, style: "display: block" %>
    <%= form.collection_select :volunteer_id, @volunteers, :id, :full_name, prompt: "Select Volunteer" %>
  </div>

  <div>
    <%= form.label :event_id, style: "display: block" %>
    <%= form.collection_select :event_id, @events, :id, :title, prompt: "Select Event" %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, VolunteerAssignment::STATUSES.map { |s| [s.titleize, s] }, prompt: "Select Status" %>
  </div>

  <div>
    <%= form.label :hours_worked, style: "display: block" %>
    <%= form.number_field :hours_worked, step: 0.1, min: 0 %>
  </div>

  <div>
    <%= form.label :date_logged, style: "display: block" %>
    <%= form.date_field :date_logged %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
