<div class="container-fluid justify-content-start">
    <div class="col-sm-4 col-12 ">
        <%= form_with(model: volunteer_assignment) do |form| %>
          <% if volunteer_assignment.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(volunteer_assignment.errors.count, "error") %> prohibited this volunteer_assignment from being saved:</h2>

              <ul>
                <% volunteer_assignment.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="my-3">
            <%= form.label :volunteer_id, class: 'form-label' %>
            <%= form.collection_select :volunteer_id, @volunteers, :id, :full_name, prompt: "Select Volunteer", class: 'form-select' %>
          </div>

          <div class="my-3">
            <%= form.label :event_id, class: 'form-label' %>
            <%= form.collection_select :event_id, @events, :id, :title, prompt: "Select Event", class: 'form-select' %>
          </div>

          <div class="my-3">
            <%= form.label :status, class: 'form-label' %>
            <%= form.select :status, VolunteerAssignment::STATUSES.map { |s| [s.titleize, s] }, prompt: "Select Status", class: 'form-select' %>
          </div>

          <div class="my-3">
            <%= form.label :hours_worked, class: 'form-label' %>
            <%= form.number_field :hours_worked, step: 0.1, min: 0, class: 'form-control' %>
          </div>

          <div class="my-3">
            <%= form.label :date_logged, class: 'form-label' %>
            <%= form.date_field :date_logged, class: 'form-control' %>
          </div>

            <div class="my-3 col-12">
                <%= form.submit 'Add', class: 'btn btn-primary col-5' %>
                <%= link_to 'Cancel', volunteer_assignments_path, class: 'btn btn-danger col-5' %>
            </div>
        <% end %>
    </div>
</div>