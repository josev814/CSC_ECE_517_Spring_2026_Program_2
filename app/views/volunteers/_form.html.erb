<div class="container-fluid justify-content-start">
    <div class="col-sm-4 col-12 ">
        <%= form_with(model: volunteer) do |form| %>
            <% if volunteer.errors.any? %>
                <div style="color: red">
                    <h2><%= pluralize(volunteer.errors.count, "error") %> prohibited this volunteer from being
                        saved:</h2>

                    <ul>
                        <% volunteer.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <p class="text-muted">
                <span class="text-danger">*</span> indicates fields are required
            </p>

            <div class="row my-3">
                <div class="col-md-6 col-12">
                    <%= required_label(form, :username) %>
                    <%= form.text_field :username,
                      class: "form-control",
                      disabled: !@volunteer.new_record?,
                      required: @volunteer.new_record? %>
                </div>

                <div class="col-md-6 col-12">
                    <%= required_label(form, :full_name, "Full Name") %>
                    <%= form.text_field :full_name, class: 'form-control', required: true %>
                </div>
            </div>

            <div class="my-3 row">
                <div class="col-md-6 col-12">
                    <%= required_label(form, :email) %>
                    <%= form.email_field :email, class: 'form-control', required: true %>
                </div>

                <div class="col-md-6 col-12">
                    <%= form.label :phone_number, class: 'form-label' %>
                    <%= form.telephone_field :phone_number, class: 'form-control' %>
                </div>
            </div>

            <div class="my-3 row">
                <div class="col">
                    <%= form.label :address, class: 'form-label' %>
                    <%= form.text_field :address, class: 'form-control' %>
                </div>
            </div>
            <div class="my-3 row">
                <div class="col">
                    <%= form.label :skills_interests, class: 'form-label' %>
                    <%= form.textarea :skills_interests, class: 'form-control' %>
                </div>
            </div>

            <div class="my-3 row">
                <% if request.path.ends_with? '/edit' %>
                <div class="text-danger">
                    Only enter the password fields if you are wanting to update the password
                </div>
                <% end %>
                <div class="col-md-6 col-12">
                    <%= required_label(form, :password) %>
                    <%= form.password_field :password, class: 'form-control', required: @volunteer.new_record? %>
                </div>

                <div class="col-md-6 col-12">
                    <%= required_label(form, :password_confirmation, "Confirm Password") %>
                    <%= form.password_field :password_confirmation, class: 'form-control', required: @volunteer.new_record? %>
                </div>
            </div>

            <div class="my-3 row">
                <div class="col">
                <%= form.submit class: 'btn btn-primary col-5' %>
                <%= link_to 'Cancel', (@volunteer.id ? volunteer_path(@volunteer) : volunteers_path), class: 'btn btn-danger col-5' %>
                </div>
            </div>
        <% end %>
    </div>
</div>