<header class="px-3 py-2 text-bg-dark border-bottom">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid justify-content-lg-start">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li>
                    <%= link_to root_path, class: "nav-link", 'aria-current' => 'page' do %>
                    <i class="bi bi-house-fill"></i> Home
                    <% end %>
                </li>

                <li>
                    <%= link_to events_path, class: "nav-link", 'aria-current' => 'page' do %>
                    <i class="bi bi-calendar-event-fill"></i> Events
                    <% end %>
                </li>

                <% if @volunteer %>
                    <li>
                    <%= link_to my_events_path, class: "nav-link" do %>
                        <i class="bi bi-list-check"></i> My Events
                    <% end %>
                    </li>
                <% end %>
                </ul>
                <div class="text-end">
                    <%=
                    if (@volunteer.nil? || @volunteer.id.nil?) && @admin.nil?
                        render partial: 'global_components/notsignedin'
                    elsif @admin.nil?
                        render partial: 'global_components/signedin'
                    else
                        render partial: 'admins/components/navigation'
                    end
                    %>
                </div>
            </div>
        </div>
    </nav>
</header>
