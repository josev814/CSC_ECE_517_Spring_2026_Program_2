<%= form_with model: @event do |form| %>
  <% if @event.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
      </h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :event_date %><br>
    <%= form.date_field :event_date %>
  </div>

  <div>
    <%= form.label :start_time %><br>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time %><br>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.label :required_volunteers %><br>
    <%= form.number_field :required_volunteers, min: 1 %>
  </div>

  <% if @event.persisted? %>
    <div>
      <%= form.label :status %><br>
      <%= form.select :status, Event.statuses.keys %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>